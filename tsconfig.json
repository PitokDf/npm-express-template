{
    // "$schema": "https://json.schemastore.org/tsconfig", // Uncomment if you want schema validation and have internet access
    "compilerOptions": {
        "outDir": "./dist",
        "module": "CommonJS",
        "target": "ES2020",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}